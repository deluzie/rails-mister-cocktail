<div class="form-container">
  <h2>Add ingredient</h2>
  <%= simple_form_for [ @cocktail, @dose ] do |f| %>
    <%= f.association :ingredient, as: :select, label: "choose an ingredient" %>
    <%= f.input :description, label: "how much do we need of that ingredient?", placeholder: "4cl" %>
    <%= f.submit "Add ingredient", class: "btn btn-primary" %>
  <% end %>
  <h2>remove ingredients</h2>
  <% @cocktail.doses.each do |dose| %>
      <ul class="list-unstyled">
      <%= dose.description %>
      <%= dose.ingredient.name %>
      <%= link_to dose_path(@cocktail), method: :delete, data: { confirm: 'Are you sure?' }, class: 'card-remove-link' do %>
              <i class="fas fa-trash"></i>
         <% end %>
      </ul>
    <% end %>
</div>

